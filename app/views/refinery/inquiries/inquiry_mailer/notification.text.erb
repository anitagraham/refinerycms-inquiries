<%=raw t('.greeting') %>,

<%=raw t('.you_received_new_inquiry') %>

<%=raw t('.inquiry_starts') %>

<%=raw t('.from') %>: <%= @inquiry.name %>
<% if Refinery::Inquiries.show_company_field == true %>
<%=raw t('.company') %>: <%= @inquiry.company %>
<% end %>
<%=raw t('.email') %>: <%= @inquiry.email %>
<%=raw t('.phone') %>: <%= @inquiry.phone %>
<% if @inquiry.documents.attached? %>
  <%=raw "Documents" %>: <%= [@inquiry.documents.map(&:filename)].join(', ').html_safe %>
<%end %>
<%=raw t('.message') %>:
<%=raw strip_tags(@inquiry.message) %>

<%=raw t('.inquiry_ends') %>

<%=raw t('.closing_line') %>,
<%=raw Refinery::Core.site_name %>

<%=raw t('.ps') -%>
