<% attachment_types =  Refinery::Inquiries::attachment_types_human %>
<section id='attachments' >
  <div class="note">
    <h4>Uploading attachments</h4>
    <ul class='conditions'>
      <%if Refinery::Inquiries.attachments_max_number == 1 %>
        <li><%= t('.one_attachment')%></li>
      <% else %>
        <li><%= t('.many_attachments', quantity: Refinery::Inquiries.attachments_max_number) %></li>
      <% end %>
      <li><%= t('.attachment_max_size', quantity: Refinery::Inquiries.attachment_max_size_human) %></li>
      <li><%= t('.attachment_types', types: attachment_types) %></li>
    </ul>
  </div>
    <%= f.label :attachments %>
    <%= f.file_field :attachments,
                     multiple: true,
                     id: :attached_files,
                     type: :file,
                     direct_upload: true %>
</section >
